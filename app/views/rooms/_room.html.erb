<div class="col-md-12">
  <div class="row">
    <div class="col-md-3">
      <div class="room-img">
        <div class="box12">
          <%= image_first room %>
          <div class="box-content">
            <h3 class="title"><%= room.room_view.name %> </h3>
            <ul class="icon">
              <li><a href="#" data-toggle="modal" data-target="#modal-id-<%= room.id %>"><i class="fa fa-link"></i></a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
        <div class="room-des">
          <h3><%= link_to room.name, "#" %></h3>
          <p><%= room.room_view.name %></p>
          <p><%= room.description %></p>
          <ul class="room-size">
            <li><i class="fa fa-arrow-right"></i><%= t ".size" %> <%= room.size %> </li>
            <li><i class="fa fa-arrow-right"></i><%= t ".bed" %>  <%= room.bed %> </li>
          </ul>
          <ul class="room-icon">
            <li class="icon-1"></li>
            <li class="icon-2"></li>
            <li class="icon-3"></li>
            <li class="icon-4"></li>
            <li class="icon-5"></li>
            <li class="icon-6"></li>
            <li class="icon-7"></li>
            <li class="icon-8"></li>
            <li class="icon-9"></li>
            <li class="icon-10"></li>
          </ul>
        </div>
    </div>
    <div class="col-md-3">
      <div class="room-rate">
        <h3><%= t ".from" %></h3>
        <h1><%= number_to_currency(room.price, locale: :en, :delimiter => ",") %></h1>
        <a href="#"><%= t ".book_now" %></a>
      </div>
    </div>
  </div>
  <hr>
</div>
<div class="modal fade" id="modal-id-<%= room.id %>" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle"><%= t ".iamges_room" %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% room.images.each do |image| %>
          <%= image_tag image.display_image %>
        <% end %>
      </div>
    </div>
  </div>
</div>
